{% extends 'base.html.twig' %}

{% block title %}Page de contact{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/contactStyle.css') }}">
{% endblock %}

{% block body %}
    <!-- This block displays any flash messages -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% if not app.user %}
        <header class='main-header'>
            <div class='logo'>
                <img src='{{ asset('images/logo.png') }}' alt='Company Logo'>
            </div>
            <nav class='main-nav'>
                <ul>
                    <li><a href='/contact' class="link">Contact</a></li>
                    <li><a href='/aboutus' class="link">About Us</a></li>
                    <li><a href='/' class="link">Books</a></li>
                </ul>
            </nav>
            <div class='user-actions'>
                <a href='/cart'>Cart</a>
                <a href='/login'>Login</a>
                <a href='/register'>sign in</a>
            </div>
        </header>
    {% else %}
        <header class='main-header'>
            <div class='logo'>
                <img src='{{ asset('images/logo.png') }}' alt='Company Logo'>
            </div>
            <nav class='main-nav'>
                <ul>
                    <li><a href='/contact' class="link">Contact</a></li>
                    <li><a href='/aboutus' class="link">About Us</a></li>
                    <li><a href='/' class="link">Books</a></li>
                </ul>
            </nav>
            <div class='user-actions'>
                <a href='/cart'>Cart</a>
                <a href='/logout'>Logout</a>
            </div>
        </header>
    {% endif %}

    <div class="container smaller-container">
        <form action="{{ path('app_contact') }}" method="post">
            <div class="logo-container">
                <img src='{{ asset('images/logo.png') }}' alt='Company Logo'>
            </div>
            <h3>GET IN TOUCH</h3>
            <input type="text" id="name" name="name" placeholder="Enter your name" required>
            <input type="email" id="email" name="email" placeholder="Enter your email" required>
            <input type="text" id="phone" name="phone" placeholder="Enter your phone number" required>
            <textarea id="message" name="message" rows="4" placeholder="How can we help you?" required></textarea>
            <button type="submit" name="submit">Send</button>
        </form>
    </div>
{% endblock %}
