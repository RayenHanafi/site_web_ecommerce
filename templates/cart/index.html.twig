{# templates/cart/index.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/cartStyle.css') }}">
{% endblock %}

{% block body %}
    
    <header class='main-header'>
        <div class='logo'>
            <img src='{{ asset('images/logo.png') }}' alt='Company Logo'>
        </div>
        <nav class='main-nav'>
            <ul>
                <li><a href='/contact'>Contact</a></li>
                <li><a href='/aboutus'>About Us</a></li>
                <li><a href='/'>Books</a></li>
            </ul>
        </nav>
        <div class='user-actions'>
            <a href='/cart'>Cart</a>
            <a href='/logout'>Logout</a>
        </div>
    </header>

    <main class="container">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <section class="row">
            {% if isCartEmpty %}
                <div class="empty-cart-message">
                    <p>Your cart is empty</p>
                    <a href="{{ path('book_index') }}" class="btn btn-primary">Continue Shopping</a>
                </div>
            {% else %}
                <div class="cart-items">
                    <h2>Your Cart</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Book</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in cartData %}
                                <tr>
                                    <td>{{ item.book.title }}</td>
                                    <td>{{ item.book.price }} DT</td>
                                    <td>
                                        <a href="{{ path('cart_decrease', {'id': item.book.id}) }}" class="btn btn-sm btn-primary">-</a>
                                        <span class="mx-2">{{ item.quantity }}</span>
                                        <a href="{{ path('cart_add', {'id': item.book.id}) }}" class="btn btn-sm btn-primary">+</a>
                                    </td>
                                    <td>{{ item.book.price * item.quantity }} DT</td>
                                    <td>
                                        <a href="{{ path('cart_remove', {'id': item.book.id}) }}" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Remove
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-right"><strong>Total:</strong></td>
                                <td><strong>{{ total }} DT</strong></td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                    <div class="cart-actions">
                        <a href="{{ path('cart_order') }}" class="btn btn-success">Proceed to Checkout</a>
                        <a href="{{ path('book_index') }}" class="btn btn-primary">Continue Shopping</a>
                    </div>
                </div>
            {% endif %}
        </section>
    </main>
{% endblock %}
