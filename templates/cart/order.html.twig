{# templates/cart/order.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/registerStyle.css') }}">
    <style>
        .btn-primary {
            width: 100%;
            padding: 10px;
            background-color: #CE6A6B;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 20px;
        }
        .btn-primary:hover {
            background-color: #b55c5d;
        }
        #orderForm_ville {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
        }
        label {
            font-weight: 500;
            color: #333;
            margin-bottom: 5px;
            display: block;
        }
        .alert {
            margin-bottom: 20px;
            padding: 15px;
            border-radius: 4px;
            text-align: center;
            font-weight: 500;
        }
        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
    </style>
{% endblock %}

{% block title %}Place Order{% endblock %}

{% block body %}
<div id="form-container">
    <div id="form-inner-container">
        <div id="sign-up-container">
            <h1 class="signup-heading">Place Order</h1>

            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {{ form_start(orderForm) }}
            <div class="form-group">
                {{ form_label(orderForm.ville) }}
                {{ form_widget(orderForm.ville) }}
                {{ form_errors(orderForm.ville) }}
            </div>
            {{ form_widget(orderForm.save, {'attr': {'class': 'btn-primary'}}) }}
            {{ form_end(orderForm) }}
        </div>
    </div>
</div>
{% endblock %}