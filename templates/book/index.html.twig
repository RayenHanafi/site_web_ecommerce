{% extends 'base.html.twig' %}

{% block title %}Bookstore Main Feed{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/indexStyle.css') }}">
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.3.6/css/buttons.dataTables.min.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- DataTables JS -->
    <script type="text/javascript" src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.html5.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
{% endblock %}

{% block body %}
    {% if not app.user %}
        <header class='main-header'>
            <div class='logo'>
                <img src='{{ asset('images/logo.png') }}' alt='Company Logo'>
            </div>
            <nav class='main-nav'>
                <ul>
                    <li><a href='/contact'>Contact</a></li>
                    <li><a href='/aboutus'>About Us</a></li>
                    <li><a href='/'>Books</a></li>
                </ul>
            </nav>
            <div class='user-actions'>
                <a href='/cart'>Cart</a>
                <a href='/login'>Login</a>
                <a href='/register'>sign in</a>
            </div>
        </header>
    {% else %}
        <header class='main-header'>
            <div class='logo'>
                <img src='{{ asset('images/logo.png') }}' alt='Company Logo'>
            </div>
            <nav class='main-nav'>
                <ul>
                    <li><a href='/contact'>Contact</a></li>
                    <li><a href='/aboutus'>About Us</a></li>
                    <li><a href='/'>Books</a></li>
                </ul>
            </nav>
            <div class='user-actions'>
                <a href='/cart'>Cart</a>
                <a href='/logout'>Logout</a>
            </div>
        </header>
    {% endif %}

    <div class="content">
        <div class="background-image">
            <img src="{{ asset('images/LIBRERY.jpg') }}" alt="Bookstore Image">
            <div class="text-overlay">
                <h2>Welcome to our Bookstore</h2>
                <p>Discover a world of stories waiting to be explored. From bestsellers to hidden gems, we have something for every reader.</p>
            </div>
        </div>
    </div>

    <main>
        <div class="container">
            <table id="booksTable" class="display">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for book in books %}
                        <tr>
                            <td><img src="{{ asset('/' ~ book.img) }}" class="bookimg" alt="{{ book.title }}"></td>
                            <td>{{ book.title }}</td>
                            <td>{{ book.author }}</td>
                            <td>{{ book.price }} DT</td>
                            <td>
                                <div class="rating">
                                    <span class="star" onclick="setRating(1,{{ book.id }})">&#9733;</span>
                                    <span class="star" onclick="setRating(2,{{ book.id }})">&#9733;</span>
                                    <span class="star" onclick="setRating(3,{{ book.id }})">&#9733;</span>
                                    <span class="star" onclick="setRating(4,{{ book.id }})">&#9733;</span>
                                    <span class="star" onclick="setRating(5,{{ book.id }})">&#9733;</span>
                                </div>
                                <a href="{{ path('cart_add', {id: book.id}) }}" class="btn btn-success btn-add-to-cart">Add to cart</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </main>

    <footer>
        <p>&copy; 2025 Bookstore. All rights reserved.</p>
    </footer>

    <script>
        $(document).ready(function() {
            $('#booksTable').DataTable({
                dom: 'Bfrtip',
                buttons: ['copy', 'csv', 'excel', 'pdf'],
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.4/i18n/fr-FR.json"
                }
            });
        });

        function setRating(rating, bookId) {
            const stars = document.querySelectorAll(`tr[data-book-id="${bookId}"] .star`);
            stars.forEach((star, index) => {
                if (index < rating) {
                    star.classList.add('rated');
                } else {
                    star.classList.remove('rated');
                }
            });
        }
    </script>
{% endblock %}
